#!/bin/bash

{
# variables
DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
source "$DIR/../operations/variables"

echo configuring raspberry pi
$DIR/piconfig

echo installing prerequisites
$DIR/prerequisites

echo setting permissions
chmod +x $workingdir/signage_*
chmod +x $workingdir/functions/function_*

echo installing olivetin
$workingdir/functions/function_olivetin

echo installing filebrowser
$workingdir/functions/function_filebrowser

echo enabling logo
$workingdir/signage_logo

echo restarting
sudo reboot

} | sudo tee /var/log/digitalsignage_install_$(date +'%d_%m_%Y_%I_%M').log
