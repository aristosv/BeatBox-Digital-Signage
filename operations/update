#!/bin/bash

{
# variables
currentdir=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
source $currentdir/variables

echo updating digitalsignage
cd $workingdir
git reset --hard > /dev/null 2>&1
git pull origin main > /dev/null 2>&1

echo setting permissions
chmod +x $currentdir/config_* $workingdir/signage_* $workingdir/functions/function_*

echo updating olivetin
$workingdir/functions/function_olivetin

echo updating filebrowser
$workingdir/functions/function_filebrowser

} | sudo tee /var/log/digitalsignage_update_$(date +'%d_%m_%Y_%I_%M').log